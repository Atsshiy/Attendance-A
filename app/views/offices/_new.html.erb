<% provide(:class_text, 'create') %>
<% provide(:button_text, '追加') %>

<div class="modal-dialog model-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">拠点情報追加</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @office, local: true) do |f| %>
            <%= render 'shared/office_error_messages', object: @office %>
              
            <%= f.label :office_number, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :office_number, class: "form-control" %>
            
            <%= f.label :office_name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :office_name, class: "form-control" %>
            
            <%= f.label :office_category, class: "label-#{yield(:class_text)}" %>
            <%= f.select :office_category, ['出勤','退勤'], {include_blank: '拠点種類'},class: "form-control" %>
            
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>